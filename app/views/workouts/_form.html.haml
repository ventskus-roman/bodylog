= simple_form_for(workout, html: { class: "form-horizontal workout_form"}) do |f|
  = f.input :title, label: "Название", input_html: { class: "form-control" }
  = f.input :date, label: "Дата", as: :string, input_html: { class: "form-control", value: f.object.date || DateTime.now.strftime("%d.%m.%Y") }
  = f.submit "Добавить", class: "btn btn-primary"
