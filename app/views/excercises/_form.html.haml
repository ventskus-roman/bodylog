= simple_form_for(excercise, html: { class: "form-horizontal excercise_form"}) do |f|
  = f.input :name, label: "Название", input_html: { class: "form-control" }
  = f.input :description, label: "Описание", as: :string, input_html: { class: "form-control" }
  = f.association :category, label: "Категория", collection: Category.all, prompt: "Выберите категорию"
  = f.submit "Добавить", class: "btn btn-primary"
